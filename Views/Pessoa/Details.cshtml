﻿
@model PessoaViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="mt-4">Detalhes</h1>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-3">Nome:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">Tipo de Pessoa:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoPessoa)</dd>

                <dt class="col-sm-3">CPF/CNPJ:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CpfCnpj)</dd>

                <dt class="col-sm-3">Cidade ID:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CidadeId)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
        <a href="@Url.Action("Index")" class="btn btn-secondary">Voltar para Listagem</a>
    </div>
</div>