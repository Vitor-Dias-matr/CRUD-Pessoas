
@model CidadeViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="mt-4">Excluir Cidade</h1>

    <h3 class="mt-4">Tem certeza que deseja excluir esta cidade?</h3>

    @if (ViewBag.ErroExclusao != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErroExclusao
        </div>
    }

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Detalhes da Cidade</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Id)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Estado)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Estado)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="DeletePorId" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Voltar para Listagem</a>
    </form>
</div>
